!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => author, :name => "author"}
    %meta{:content => "initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width", "name" => "viewport"}
    :scss
      #{File.read(File.join(File.dirname(__FILE__), "template.scss"))}
    %title= title
  %body
    = content
    - if not title.include? "Damien"
      %footer
        %hr
        %a{:href => "https://www.robotinaponcho.net/notes/"} &larr; Damien's Notes index
    %script= `uglifyjs template.js -c --inline-script -m`
